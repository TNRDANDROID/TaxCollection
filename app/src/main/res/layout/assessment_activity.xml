        <LinearLayout
            android:layout_below="@+id/img_rll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="@dimen/_5sdp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tax_name_layout"
                    android:layout_centerVertical="true"

                   >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:id="@+id/card_view"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardElevation="@dimen/_7sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tax_layout"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/assesment_number_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="@string/assesment_number"
                            android:textColor="@color/grey_7"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13sdp"
                            />
                        <RelativeLayout
                            android:id="@+id/assesment_number_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/corner_strong_rect_bg_all"
                            android:orientation="vertical">


                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/full_transparent"
                                android:paddingLeft="@dimen/_10sdp"
                                android:singleLine="true"
                                android:gravity="center_vertical"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/_13sdp"
                                android:inputType="number"
                                android:hint="@string/enter_assesment_numbert"
                                android:id="@+id/assesment_number"
                                tools:ignore="Autofill,RtlSymmetry" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="Go"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:background="@drawable/circle_shadow_all_side"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/go"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp"
                                android:layout_alignParentRight="true" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/corner_strong_rect_bg_color">

                            <RelativeLayout
                                android:id="@+id/img_layout"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_marginLeft="-5dp"
                                android:layout_marginTop="-5dp"
                                android:background="@drawable/cornered_border_bg_strong"
                                >
                                <RelativeLayout
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    >
                                    <ImageView
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"
                                        android:id="@+id/tax_img"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/property_tax"
                                        android:layout_centerHorizontal="true"/>

                                </RelativeLayout>
                            </RelativeLayout>


                            <TextView
                                android:id="@+id/details"
                                android:layout_below="@+id/img_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="15dp"
                                android:text="@string/details"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold"
                                android:gravity="center_horizontal" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:layout_below="@id/details"
                                android:id="@+id/first"
                                android:baselineAligned="false">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:text="@string/assesment_number"
                                        android:textSize="@dimen/_13sdp"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:padding="@dimen/_2sdp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:id="@+id/assesment_number_tx"
                                        android:textSize="@dimen/_13sdp"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:padding="@dimen/_2sdp"/>

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/sec"
                                android:layout_below="@id/first"
                                android:weightSum="2"
                                android:baselineAligned="false">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:text="@string/tax_Collection"
                                        android:textSize="@dimen/_13sdp"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:padding="@dimen/_2sdp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:id="@+id/type"
                                        android:textSize="@dimen/_13sdp"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:padding="@dimen/_2sdp"/>

                                </LinearLayout>
                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>





            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

