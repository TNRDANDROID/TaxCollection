<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:clickable="true"
    android:outlineAmbientShadowColor="@color/colorPrimary"
    android:outlineSpotShadowColor="@color/colorAccent"
    android:focusable="true"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:id="@+id/payment_name_layout"
        android:layout_centerVertical="true"
        android:background="@drawable/cornered_curved_bg"
       >
        <RelativeLayout
            android:id="@+id/icon_1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/payment_img"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/property_tax"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_10sdp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_toRightOf="@+id/icon_1"
            android:layout_toLeftOf="@+id/icon_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/icon_1"
            android:layout_toStartOf="@+id/icon_2">

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/payment_name"
                android:gravity="start"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sdp"
                android:text="@string/tax_Collection"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:id="@+id/icon_2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/go_icon"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/grey_7"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/_10sdp" />

        </RelativeLayout>

    </RelativeLayout>





</RelativeLayout>