<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_margin="@dimen/_7sdp"
        android:layout_centerVertical="true"
        android:id="@+id/img_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cornered_border_bg_strong"
        >
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/tax_img"
                android:layout_centerInParent="true"
                android:src="@drawable/property_tax"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:id="@+id/tax_name_layout"
        android:layout_toRightOf="@+id/img_layout"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-33dp"
        android:background="@drawable/corner_strong_rect_bg"
        android:layout_toEndOf="@+id/img_layout"
        android:layout_marginStart="-33dp">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taxName"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14sdp"
            android:text="@string/tax_Collection"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
    </RelativeLayout>





</RelativeLayout>