            android:text="1"
            android:textColor="@android:color/black"
            android:gravity="end" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="10.00"
            android:gravity="end"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="10.00"
            android:gravity="end"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

</RelativeLayout>